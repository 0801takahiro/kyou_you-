<div class="container">
<h5>タグが<%=@content.name%>の投稿一覧</h5>

<!--タグリスト-->
<% @content_list.each do |list|%>
<%=link_to list.name,search_content_path(content_id: list.id) %>
<%="(#{list.impressions.count})" %><% end %>
<% @impressions.each do |impression| %>
<!--投稿はカードで囲む-->
<div class="card">
  <div class="card-body">
    <!--タイトル表示される文字数は２５文字までにしてます-->
    <h6 class="card-title">
      <%= link_to impression_path(impression.id) do %><%= impression.body.truncate(25) %>
      <% end %>
    </h6>



  </div>
</div>
<% end %>